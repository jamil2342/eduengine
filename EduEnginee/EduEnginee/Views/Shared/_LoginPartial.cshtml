@if (Request.IsAuthenticated)
{
    <p>
        Hello, @Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", new { Area = "" }, htmlAttributes: new { @class = "username", title = "Change password" })!
        @Html.ActionLink("Log off", "LogOff", "Account", new { Area = "" }, new { })
    </p>
}
else
{
    <ul>
        <li>@Html.ActionLink("Register", "Register", "Account", new { Area = "" }, htmlAttributes: new { id = "registerLink", data_dialog_title = "Registration" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", new { Area = "" }, htmlAttributes: new { id = "loginLink", data_dialog_title = "Identification" })</li>
    </ul>
}